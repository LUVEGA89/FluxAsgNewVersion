            success: function (data) {
                if (data != null) {
                    var table = $('#table-clientes').DataTable();
                    table.destroy();

                    $("#body-clientes").html('');
                    console.log(JSON.stringify(data));
                    $.each(data.Context, function (index, value) {
                        $("#body-clientes").append(
