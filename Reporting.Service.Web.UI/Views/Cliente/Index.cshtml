        });
    }

    function insertOrUpdate(e) {
        let action = $(e).html();
        if (action == 'Update') {
            console.log("Actualizando");
            update();
        } else {
            console.log("Insertando");
            insert();
        }
    }

    function buildSelectState(e) {
        let valCountry = $(e).val();
        if (valCountry != "" && valCountry != null) {
            let index = searchIndexStatesByCountry(valCountry, globalCountryStatesOBJ);
            buildSelectStates(index, globalCountryStatesOBJ);
        }
    }

    function searchIndexStatesByCountry(country, arrCountryStates) {
        let indexFound = "";
        if (arrCountryStates.length > 0) {
            $("#estado").html('');

            for (var i = 0; i < arrCountryStates.length; i++) {
                if (arrCountryStates[i].name == country) {
                    indexFound = i;
                    //Sale del ciclo
                    i = arrCountryStates.length;
                }
            }
        }
        return indexFound;
    }

    function buildSelectStates(index, arrCountryStates) {
        $("estado").html('');
        $("#estado").append('<option value="">State</option>');

        let statesCountry = arrCountryStates[index].states;

        $.each(statesCountry, function (index, value) {
            $("#estado").append('<option value="' + value.name + '">' + value.name + '</option>');
        });

    }

