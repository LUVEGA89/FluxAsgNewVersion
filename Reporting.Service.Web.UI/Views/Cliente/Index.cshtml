                        }
                    });
                }
            }
        });

        $.ajax({
            type: 'GET',
            url:  'https://countriesnow.space/api/v0.1/countries/states',
            success: function (response) {
                if ( !response.error ) {
                    globalCountryStatesOBJ = response.data;
                    $("#cbx-paises").html('');
                    $("#cbx-paises").append('<option value="">Country</option>');
                    $.each(globalCountryStatesOBJ, function (index, value) {
                        $("#cbx-paises").append('<option value="' + value.name + '">' + value.name + '</option>');
                    });

                }

