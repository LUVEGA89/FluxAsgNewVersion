@model Reporting.Service.Web.UI.Models.EmpresaUpdateViewModel

@{
    ViewBag.Title = "Empresa";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Companies</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Companies List</li>
    </ol>
    <div class="row">
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                Company register's
                <!--
                <button type="submit" class="btn btn-primary float-end"
                        onclick="window.location.href = '@Url.Action("Register", "Empresa")';">
                    Nueva Empresa
                </button>
                    -->
                <button type="submit" class="btn btn-primary float-end" data-bs-toggle="modal" data-bs-target="#modalEmpresa">
                    New Company
                </button>

            </div>
            <div class="card-body">
                <table id="example" class="table table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <td>IDENTIFIER</td>
                            <td>NAME</td>
                            <td>COMMERCIAL NAME</td>
                            <td>SHIPMENT ADDRESS</td>
                            <td>STATE</td>
                            <td>ACTIONS</td>
                        </tr>
                    </thead>
                    <tbody id="body-empresa">
                    </tbody>
                    <tfoot>
                    </tfoot>
                </table>
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="modalEmpresa" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog  modal-dialog-centered modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Company Registration</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row mb-3">
                            <div class="">
                                <div class="alert alert-danger" role="alert" id="alert-required" style="display:none"></div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="input-group mb-3">
                                    <span class="input-group-text"><i class="fa fa-building"></i></span>
                                    <div class="form-floating">
                                        <input type="hidden" name="id" id="id" />
                                        <input class="form-control" id="nombre" type="text" placeholder="Nombre" autocomplete="off" />
                                        <label for="inputFirstName">Name</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="input-group mb-3">
                                    <span class="input-group-text"><i class="fa fa-building"></i></span>
                                    <div class="form-floating">
                                        <input class="form-control" id="razonSocial" type="text" placeholder="Commercial Name" autocomplete="off" />
                                        <label for="inputLastName">Commercial Name</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--<div class="form-floating mb-3">
                            <label for="inputEmail">Address</label>
                        </div>-->
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <div class="input-group mb-3">
                                    <span class="input-group-text"><i class="fa fa-map-marker"></i></span>
                                    <div class="form-floating">
                                        <input class="form-control" id="entrega" type="text" placeholder="Shipment Address" autocomplete="off" />
                                        <label for="inputEmail">Shipment Address</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            Cancel
                        </button>
                        <button type="submit" onclick="insertOrUpdate(this);" id="btn-company-save" class="btn btn-primary">Save</button>
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>

<script type="text/javascript">

        load();

        $(document).ready(function () {
            $('#modalEmpresa').on('hidden.bs.modal', function (e) {
                cleanFields();
            })
        });

        function cleanFields() {
            $('#alert-required').attr("style", "display:none");
            $('#nombre').val("");
            $('#razonSocial').val("");
            $('#entrega').val("");
            $('#btn-company-save').html("Save");
        }

    function load() {
     // ObtenerEmpresas
        $.ajax({
            type: 'GET',
            url:  '@Url.Action("ObtenerEmpresas", "Empresa")',
            success: function (data) {
                if (data != null) {
                    //var table = $('#example').DataTable();
                    //table.destroy();
                    $("#body-empresa").html('');

                    $.each(data.Context, function (index, value) {
                        $("#body-empresa").append(
                            '<tr>\
                                    <td> '+ value.Identifier + ' </td>\
                                    <td> '+ value.Nombre + ' </td>\
                                    <td> '+ value.RazonSocial + ' </td>\
                                    <td> '+ value.Entrega + ' </td>\
                                    <td> '+ value.Estatus + ' </td>\
                                    <td class="text-center"><i class="fa-solid fa-pencil" onclick=edit('+ value.Identifier + ');  data-bs-toggle="modal" data-bs-target="#modalEmpresa"></i> <i class="fa fa-trash" onclick=eliminar(' + value.Identifier + ');></i >\
                                    </td >\
                            </tr >');
                    });

                    $('#example').DataTable({
                        "dom": "Bfrtip",
                        "buttons": [
                            "excel", "pdf"
                        ],
                        "pageLength": 10,
                        "searching": true,
                        "ordering": true,
                        "autoWidth": true,
                        "language": {
                            "url": "//cdn.datatables.net/plug-ins/1.10.13/i18n/Spanish.json"
                        }
                    });
                }
            }
        });
        }

    function insertOrUpdate(e) {
        let action = $(e).html();
        if (action == 'Update') {
            console.log("Actualizando");
            update();
        } else {
            console.log("Insertando");
            insert();
        }
    }

    function edit(id) {
            $.ajax({
                url:'@Url.Action("Edit", "Empresa")',
                type: "get", //send it through get method
                data: {
                    id: id,
                },
                success: function (response) {
                    $('#btn-company-save').html("Update");
                    if (response.Context != null) {
                        $('#id').val(response.Context.Identifier);
                        $('#nombre').val(response.Context.Nombre);
                        $('#razonSocial').val(response.Context.RazonSocial);
                        $('#entrega').val(response.Context.Entrega);
                    }
                },
                error: function (xhr) {
                    console.log(JSON.stringify(xhr));
                }
            })
    }

    function insert() {
        let nombre = $('#nombre').val();
        let razonSocial = $('#razonSocial').val();
        let entrega = $('#entrega').val();

        let objDataCompany = {
            "Name": nombre,
            "Commercial Name": razonSocial,
            "Shipment Address": entrega
        };

        let stringRequired = validateDataCompany(objDataCompany);

        if (stringRequired != "") {
            let stringMsgError = "<b>The following fields are required:</b><br>";
            $('#alert-required').attr("style","display:block");
            $('#alert-required').html(stringMsgError + stringRequired );
            return;
        } else {

            $.ajax({
                url: '@Url.Action("Insert", "Empresa")',
                type: "POST", //send it through get method
                data: {
                    Nombre: nombre,
                    RazonSocial: razonSocial,
                    Entrega: entrega
                },
                success: function (response) {
                    if (response.Code == 200) {
                        Swal.fire('The company has successfully registered');
                        load();
                        CierraPopup();
                    }
                    else {
                        console.log(JSON.stringify(response));
                    }
                },
                error: function (xhr) {
                    console.log(JSON.stringify(xhr));
                }
            })
        }
    }

    function validateDataCompany(dataCompany) {
        let stringRequiredFields = "";
        for (const key in dataCompany) {

            if (dataCompany[key] == "") {
                stringRequiredFields += key + "<br>";
            }

            console.log(`${key}: ${dataCompany[key]}`);
        }
        return stringRequiredFields;
    }

    function update() {
        let id = $('#id').val();
        let nombre = $('#nombre').val();
        let razonSocial = $('#razonSocial').val();
        let entrega = $('#entrega').val();

        $.ajax({
            contentType: "application/json; charset=utf-8",
            url: '@Url.Action("Update", "Empresa")',
            async: false,
            timeout: 3000,
            type: 'POST',
            data: '{"Identifier":"' + id + '","Nombre":"' + nombre + '","RazonSocial":"' + razonSocial + '","Entrega":"' + entrega + '"}',
            dataType: "json",
            success: function (data) {
                if (data.Code == 200) {
                    Swal.fire('The company has successfully updated');
