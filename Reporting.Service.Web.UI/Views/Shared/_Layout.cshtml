            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            var claimsIdentity = User.Identity as System.Security.Claims.ClaimsIdentity;
                            if (claimsIdentity != null)
                            {
                                var rolesClaim = claimsIdentity.FindFirst(System.Security.Claims.ClaimTypes.Role);
                                if (rolesClaim != null)
                                {
                                    var roles = rolesClaim.Value;
                                    // Realiza acciones basadas en los roles del usuario
                                    if (roles.Contains("Admin"))
                                    {
                                        <div class="sb-sidenav-menu-heading">Administrador</div>
                                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapsePages" aria-expanded="false" aria-controls="collapsePages">
