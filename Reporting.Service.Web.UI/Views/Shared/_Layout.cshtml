                                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                                        </a>
                                        <div class="collapse" id="collapsePages" aria-labelledby="headingTwo" data-bs-parent="#sidenavAccordion">
                                            <nav class="sb-sidenav-menu-nested nav">
                                                <a class="nav-link" href="@Url.Action("Index","Roles")">
                                                    <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                                    Roles
                                                </a>
                                                <a class="nav-link" href="@Url.Action("Index","Empresa")">
                                                    <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                                    Empresas
                                                </a>
                                            </nav>

                                        </div>
                                        <div class="sb-sidenav-menu-heading">Menu</div>
                                        <a class="nav-link" href="@Url.Action("Index","Usuario")">
                                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                            Users
                                        </a>
                                        <a class="nav-link" href="@Url.Action("Index","Cliente")">
                                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                            Customers
                                        </a>
                                        <a class="nav-link" href="@Url.Action("Index","Cotizacion")">
                                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                            Quotations
                                        </a>
                                        <a class="nav-link" href="@Url.Action("Index","Mision")">
                                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                            Missions
                                        </a>

                                        <div class="sb-sidenav-menu-heading">Reportes</div>
                                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapsePages1" aria-expanded="false" aria-controls="collapsePages1">
                                            <div class="sb-nav-link-icon"><i class="fas fa-book-open"></i></div>
                                            Misiones
                                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                                        </a>
                                        <div class="collapse" id="collapsePages1" aria-labelledby="headingTwo" data-bs-parent="#sidenavAccordion1">
                                            <nav class="sb-sidenav-menu-nested nav">
                                                <a class="nav-link" href="@Url.Action("ReporteGeneral","Mision")">
                                                    <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                                    General
                                                </a>
                                            </nav>

                                        </div>
                                    }
                                    else if (roles.Contains("Proveedor"))
                                    {
                                        <div class="sb-sidenav-menu-heading">Menu</div>
                                        <a class="nav-link" href="@Url.Action("Index","Home")">
                                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                            Suppliers
                                        </a>
                                    }
                                    else
                                    {
                                        <div class="sb-sidenav-menu-heading">Menu</div>
                                        <a class="nav-link" href="@Url.Action("Index","Usuario")">
                                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                            Users
                                        </a>
                                        <a class="nav-link" href="@Url.Action("Index","Cliente")">
                                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                            Customers
                                        </a>
                                        <a class="nav-link" href="@Url.Action("Index","Cotizacion")">
                                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                            Quotations
                                        </a>
                                        <a class="nav-link" href="@Url.Action("Index","Mision")">
                                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                            Missions
                                        </a>

                                        <div class="sb-sidenav-menu-heading">Reportes</div>
                                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapsePages1" aria-expanded="false" aria-controls="collapsePages1">
