
@{
    ViewBag.Title = "Cartera de clientes";
}
<section class="content-header">
    <h1>
        Cartera
        <small>Reportes SAP</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Reportes SAP </a></li>
        <li class="active">Cartera</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-danger">
                <div class="box-header">
                    <i class="fa fa-book"></i>
                    <h3 class="box-title">Saldos Vencidos</h3>
                    <div class="box-tools pull-right">
                        <button id="btn-excel" type="button" class="btn btn-box-tool"><i class="fa fa-file-excel-o"></i></button>
                    </div>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-bordered table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Canal</th>
                                        <th>Total</th>
                                        <th>Saldo</th>
                                        <th>Porcentaje</th>
                                    </tr>
                                </thead>
                                <tbody id="canal"></tbody>
                            </table>
                        </div>
                        <div class="col-xs-6">
                        </div>
                        <div class="col-xs-6">
                            <div class="table-responsive">
                                <table class="table">
                                    <tbody>
                                        <tr class="danger">
                                            <th style="width:50%">Total Vencido:</th>
                                            <td id="total"></td>
                                        </tr>
                                        <tr class="danger">
                                            <th>Total Saldo: </th>
                                            <td id="saldo"></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="box box-warning">
                <div class="box-header">
                    <i class="fa fa-clock-o"></i>
                    <h3 class="box-title">Saldos vencidos por periodos</h3>
                </div>
                <div class="box-body">
                    
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-bordered table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Periodo</th>
                                        <th>Total</th>
                                        <th>Saldo</th>
                                        <th>Porcentaje</th>
                                    </tr>
                                </thead>
                                <tbody id="periodo"></tbody>
                            </table>
                        </div>
                        <div class="col-xs-6">
                        </div>
                        <div class="col-xs-6">
                            <div class="table-responsive">
                                <table class="table">
                                    <tbody>
                                        <tr class="warning">
                                            <th style="width:50%">Total Vencido:</th>
                                            <td id="total2"></td>
                                        </tr>
                                        <tr class="warning">
                                            <th>Total Saldo: </th>
                                            <td id="saldo2"></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header">
                    <i class="ion ion-clipboard"></i>
                    <h3 class="box-title">Detalle de saldos vencidos</h3>
                </div>
                <div class="box-body">

                    <div class="col-md-12">
                        <div class="row">
                            <table id="cartera" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Canal</th>
                                        <th>Factura</th>
                                        <th>Cliente</th>
                                        <th>Agente</th>
                                        <th>Total</th>
                                        <th>Saldo</th>
                                        <th>Vencimiento</th>
                                        <th>Dias Vencidos</th>
                                    </tr>
                                </thead>
                                <tbody id="detalle"></tbody>

                            </table>
                        </div>

                    </div>
                </div>
                <div class="box-footer">
                    
                </div>
            </div>
        </div>
    </div>



</section>
<script>
    $('#btn-excel').click(function () {
        $.confirm({
            title: '¡Confirmar!',
            content: 'Esto podría tomar unos segundos.',
            type: 'blue',
            buttons: {
                confirm: {
                    text: 'Confirmar',
                    action: function () {
                        $.post('@Url.Action("ExcelReporteCartera", "Cartera")', function (data) {
                            console.log(data)
                            window.location.href = '@Url.Action("Download", "Cartera")' + '?fileGuid=' + data.FileGuid + '&fileName=' + data.FileName;
                        });
                    }
                },
                cancel: {
                    text: 'Cancelar',
                    action: function () {
                        $.alert('El proceso ha sido cancelado')
                    }
                }
            }
        });
    });

    var formatNumber = {
        separador: ",", // separador para los miles
        sepDecimal: '.', // separador para los decimales
        formatear: function (num) {
            num += '';
            var splitStr = num.split('.');
            var splitLeft = splitStr[0];
            var splitRight = splitStr.length > 1 ? this.sepDecimal + splitStr[1] : '';
            var regx = /(\d+)(\d{3})/;
            while (regx.test(splitLeft)) {
                splitLeft = splitLeft.replace(regx, '$1' + this.separador + '$2');
            }
            return this.simbol + splitLeft + splitRight;
        },
        new: function (num, simbol) {
            this.simbol = simbol || '';
            return this.formatear(num);
        }
    }
    InitModule();

    function InitModule() {
        LoadCarteraCanales();
        LoadCarteraPeriodos();
        LoadCarteraDetalle();
    }

    function LoadCarteraCanales() {
        $.post('@Url.Action("GetCarteraCanal", "Cartera")', function (data) {
            console.log(data);
            if (data != null && $.isArray(data.Context)) {
                $("#canales").html('');
                var total = 0;
                var saldo = 0;
                $.each(data.Context, function (index, value) {
                    total = total + value.Total;
                    saldo = saldo + value.Saldo;
                });

                $('#total').html(formatNumber.new(total.toFixed(2), "$"));
                $('#saldo').html(formatNumber.new(saldo.toFixed(2), "$"));

                $.each(data.Context, function (index, value) {
                    var porcentaje = 0;
                    porcentaje = (value.Total * 100) / total;

                    $("#canal").append("<tr>\
                                            <td>" + value.Nombre + "</td>\
                                            <td>" + formatNumber.new(value.Total.toFixed(2), "$") + "</td>\
                                            <td>" + formatNumber.new(value.Saldo.toFixed(2), "$") + "</td>\
                                            <td>" + formatNumber.new(porcentaje.toFixed(2),"") + " % </td>\
                                         </tr>");
                });

            }else{
                $.alert("Ocurrio un error al procesar la solicitud");
            }
        });
    }

    function LoadCarteraPeriodos() {
        $.post('@Url.Action("GetCarteraPeriodo", "Cartera")', function (data) {
            console.log(data);
            if (data != null && $.isArray(data.Context)) {
                $("#periodos").html('');
                var total = 0;
                var saldo = 0;

                $.each(data.Context, function (index, value) {
                    total = total + value.Total;
                    saldo = saldo + value.Saldo;
                });

                $('#total2').html(formatNumber.new(total.toFixed(2), "$"));
                $('#saldo2').html(formatNumber.new(saldo.toFixed(2), "$"));

                $.each(data.Context, function (index, value) {
                    var porcentaje = 0;
                    porcentaje = (value.Saldo * 100) / saldo;

                    $("#periodo").append("<tr>\
                                            <td>" + value.Nombre + "</td>\
                                            <td>" + formatNumber.new(value.Total.toFixed(2), "$") + "</td>\
                                            <td>" + formatNumber.new(value.Saldo.toFixed(2), "$") + "</td>\
                                            <td>" + formatNumber.new(porcentaje.toFixed(2),"") + " % </td>\
                                         </tr>");
                });
            }else{
                $.alert("Ocurrio un error al procesar la solicitud");
            }
        });
    };

    function LoadCarteraDetalle() {
        console.log('detalle')
        $.post('@Url.Action("GetCarteraDetalle", "Cartera")', function (data) {
            console.log(data)
            if (data != null && $.isArray(data.Context)) {
                var table = $('#cartera').DataTable();
                table.destroy();

                $("#detalle").html('');

                $.each(data.Context, function (index, value) {
                    $("#detalle").append("<tr>\
                                            <td>" + value.Canal + "</td>\
                                            <td>" + value.Factura + "</td>\
                                            <td>" + value.Cliente + "</td>\
                                            <td>" + value.Agente + "</td>\
                                            <td>" + formatNumber.new(value.Total.toFixed(2), "$") + "</td>\
                                            <td>" + formatNumber.new(value.Saldo.toFixed(2), "$") + "</td>\
                                            <td>" +moment(value.FechaVencimiento).format('DD/MM/YYYY')  + "</td>\
                                            <td>" + formatNumber.new(value.DiasVencimiento, "") + "</td>\
                                         </tr>");
                });

                $('#cartera').DataTable({
                    "paging": true,
                    "lengthChange": true,
                    "searching": true,
                    "ordering": true,
                    "info": true,
                    "autoWidth": true,
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.10.13/i18n/Spanish.json"
                    }
                });

            } else {
                $.alert("No se encontraron registros");
            }

        });

    }



</script>