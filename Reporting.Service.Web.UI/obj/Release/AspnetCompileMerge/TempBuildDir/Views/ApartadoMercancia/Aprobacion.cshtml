            url: '@Url.Action("ComprobarArchivo", "ApartadoMercancia")',
            async: false,
            timeout: 3000,
            type: 'POST',
            data: '{"fullpath":"' + fullpath + '"}',
            dataType: "json",
            success: function (data) {
                if (data.Context) {
                    window.location.href = '@Url.Action("Descargar", "ApartadoMercancia")' + '?fullpath=' + fullpath;
                } else {
                    swal({
                        title: "Archivo no encontrado",
