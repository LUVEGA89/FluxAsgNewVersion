@{
    ViewBag.Title = "Diseño";
}

<style>

    tfoot th, tfoot td {
        border-top: 2px solid #666;
        color: #363;
    }

    .text-white {
        color: white !important;
    }

    .bg-primary {
        background-color: #007bff !important;
    }

    .bg-secondary {
        background-color: #6c757d !important;
    }

    .bg-success {
        background-color: #28a745 !important;
    }

    .bg-dark {
        background-color: #343a40 !important;
    }

    .modal-lg {
        width: 95% !important;
    }
</style>

<section class="content-header">
    <h1>
        Diseño
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Diseño</a></li>
        <li class="active">Sku descontinuados</li>
        <li class="active">LVV</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="box box-danger">

            <div id="overlay-load" class="overlay" style="display:none;">
                <i class="fa fa-refresh fa-spin"></i>
            </div>

            <div class="box-header with-border">
                <div class="box-title">
                    <i class="fa fa-file"></i>
                    Sku descontinuados
                </div>
            </div>
            <div class="box-body">
                <div class="col-md-12">
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="glyphicon glyphicon-calendar"></i>
                                </div>
                                <input class="form-control" id="DelAl" type="text">
                            </div>

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="input-group">
                                <button id="btn-buscar" type="button" class="btn btn-block btn-primary">
                                    <i class="fa fa-spin"></i>
                                    Buscar
                                </button>

                                <span id="spam-load-detalle"></span>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="table table-responsive">
                        <table id="Cabecera" class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>SKU</th>
                                    <th>FECHA</th>
                                    <th>USUARIO</th>
                                </tr>
                            </thead>
                            <tbody id="Detalles"></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $('#DelAl').daterangepicker({
        locale: {
            cancelLabel: 'Clear',
            daysOfWeek: [
                "Do",
                "Lu",
                "Ma",
                "Mi",
                "Ju",
                "Vi",
                "Sa"
            ],
            monthNames: [
                "Enero",
                "Febrero",
                "Marzo",
                "Abril",
                "Mayo",
                "Junio",
                "Julio",
                "Agosto",
                "Septiembre",
                "Octubre",
                "Noviembre",
                "Deciembre"
            ]
        }

    });

    var periodo = "";

    $('#btn-buscar').click(function () {
        var drp = $('#DelAl').data('daterangepicker');
        var Del = drp.startDate.format('YYYY/MM/DD');
        var Al = drp.endDate.format('YYYY/MM/DD');
        $('#overlay-load').show();
        $('#spam-load-detalle').removeClass('text-danger');

        $("#div-root").html('');
        $('#spam-load-detalle').text('Generando reporte espere un momento por favor...');

        $.post('@Url.Action("GetArticulosDescontinuadosAltaSap", "Disenio")', {
            Del: Del,
            Al: Al
        }, function (data) {
            if (data != null) {
                var VP = $('#Cabecera').DataTable();
                VP.destroy();
                $("#Detalles").html('');

                $.each(data.Context, function (index, value) {

                    

                    $("#Detalles").append('<tr>\
                                        <td>' + value.SKU + '</td>\
							            <td>' + value.ActualizadoDescontinuadoEl + '</td>\
							            <td>' + value.UserName + '</td>\
							         </tr>\>');
                });

                $('#Cabecera').DataTable({
                    "dom": "Bfrtip",
                    "buttons": [
                        "excel", "pdf"
                    ],
                    "paging": true,
                    "pageLength": 100,
                    "lengthChange": true,
                    "searching": true,
                    "ordering": true,
                    "info": true,
                    "autoWidth": true,
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.10.13/i18n/Spanish.json"
                    }
                });

                $('#spam-load-detalle').text('');
                $('#overlay-load').hide();
            }
            else {
                $('#spam-load-detalle').text('Ocurrio un error inesperado al procesar la solicitud.');
                $('#overlay-load').hide();
            }
            if (data.Message != 'Success') {
                $('#spam-load-detalle').text('Error generado: ' + data.Message);
                $('#spam-load-detalle').addClass('text-danger');
                $('#overlay-load').hide();
            }

        });
    });

    initModule();

    function initModule() {
        $('#family-name').html('');
        $('#spam-load-detalle').text('');
        $("#div-root").html('');
    }


</script>


