                        "searching": true,
                        "language": {
                            "url": "//cdn.datatables.net/plug-ins/1.10.13/i18n/Spanish.json"
                        }
                    });

                }
            },
            error: function (data) {
                swal("Error en la api: GetNotaCreditoEstatusCredito: " + JSON.stringify(data));
            }
        });
