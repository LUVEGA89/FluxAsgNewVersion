            async: false,
            timeout: 3000,
            type: 'POST',
            data: '{"Estatus":"' + $("#cbx-Estatus").val() + '","Inicio":"' + Inicio + '","Termino":"' + Termino + '"}',
            dataType: "json",
            success: function (data) {

                if (data != null && $.isArray(data.Context)) {

                    var VP = $('#factura-origen').DataTable();
                    VP.destroy();

                    $("#table-invoice-history").empty();

