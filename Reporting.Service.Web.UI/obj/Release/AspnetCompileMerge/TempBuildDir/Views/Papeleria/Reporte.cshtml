<script>
    $("#row-custom-one").hide();
    $("#row-custom-two").hide();
    $("#row-custom-three").hide();

    $('input[type=radio][name=optionsRadios]').change(function () {
        if (this.value == 1) {
            $("#row-custom-one").show();
            $("#row-custom-two").hide();
            $("#row-custom-three").hide();
        }
        else {
            if (this.value == 2) {
                $("#row-custom-two").show();
                $("#row-custom-one").hide();
                $("#row-custom-three").hide();
            }
            else {
                $("#row-custom-two").hide();
                $("#row-custom-one").hide();
                $("#row-custom-three").show();
            }
        }
    });


    //Función que se dispara cuando se cambia el tipo de busqueda del reporte 1
    $("#cmbTipo1").change(function (event) {
        $("#tablaReporteCostos").hide();
        $("#tbodyCostos").empty();
    });

    //Función que se dispara cuando se cambia el tipo de busqueda del reporte 2
    $("#cmbTipo2").change(function (event) {
        $("#tablaReporteSKUS").hide();
        $("#tbodySKUS").empty();
    });

    //Desplegar SKUS por centro de costos
    function getSKUS(CentroCostos) {
        var fechas = $('#daterangepicker-report-one').data('daterangepicker');
        var Inicio = fechas.startDate.format('MM/DD/YYYY');
        var Fin = fechas.endDate.format('MM/DD/YYYY');
        var tipo = $("#cmbTipo1").val();
        console.log("El centro de costos es: " + CentroCostos);
        $.post('@Url.Action("ReportePapeleriaUno", "Papeleria")', {
            FecIni: Inicio,
            FecFin: Fin,
            Tipo: tipo,
            centroCosto: CentroCostos
        }, function (data) {            
            if (data != null && $.isArray(data.Context)) {
                var table = $('#tablaSKUS').DataTable();
                table.destroy();
                $("#tbodySKUS2").html('');
                var totalGastado = 0;
                var totalCantidad = 0;
                $.each(data.Context, function (index, value) {
                    totalGastado = totalGastado + value.Total;
                    totalCantidad = totalCantidad + value.CantidadReporte;
                    $("#tbodySKUS2").append(
                        "<tr>\
                                <td><div class='text-wrap' style='width: 90px'>" + value.ItemCode + "</div></td>\
                                <td align='center'><div class='text-wrap' style='width: 90px'>" + value.Area + "</div></td>\
                                <td align='center'><div class='text-wrap' style='width: 80px'>" + value.SubArea + "</div></td>\
                                <td><div class='text-wrap' style='width: 100px'>" + value.ItemName + "</div></td>\
                                <td align='center'><div class='text-wrap' style='width: 50px'>" + value.CantidadReporte + "</div></td>\
                                <td align='center'><div class='text-wrap' style='width: 80px'>" + formatNumber.new(value.Total.toFixed(2), "$ ") + "</div></td></tr>");
                });
                //Agregamos el total a la tabla
                totalGastado = totalGastado.toFixed(2);
                $("#tbodySKUS2").append(
                    "<tr>\
                                <td>Total</td>\
                                <td></td>\
                                <td></td>\
                                <td></td>\
                                <td align='center'><div class='text-wrap' style='width: 50px'>" + totalCantidad + "</div></td>\
                                <td align='center'><div class='text-wrap' style='width: 80px'>" + formatNumber.new(totalGastado, "$ ") + "</div></td></tr>");
                $('#tablaSKUS').DataTable({
                    "lengthMenu": [[10, 20, 30, -1], [10, 20, 30, "All"]],
                    "dom": 'Bfrtip',
                    stateSave: true,
                    "buttons": ['copy', 'excel', 'pdf', 'print'],
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.10.13/i18n/Spanish.json"
                    },
                    "order": false,
                });
            } else {
                swal("Error en la api: ReportePapeleriaUno");
            }
        });
    }

    //Centro de costos reporte
    document.querySelector('#btn-report-one').addEventListener('click', function (e) {
        e.preventDefault();
        $('#totalCostos').html('');
        var rep_one = $('#daterangepicker-report-one').data('daterangepicker');
        var Inicio = rep_one.startDate.format('MM/DD/YYYY');
        var Fin = rep_one.endDate.format('MM/DD/YYYY');
        var tipo = $("#cmbTipo1").val();
        if (tipo == "0") {
            swal({
                title: 'Faltan campos',
                text: 'Debe seleccionar un tipo de artículo',
                icon: 'error'
            })
        } else {
            $('#loading-1').show();
            $.post('@Url.Action("ReportePapeleriaDos", "Papeleria")', {
                FecIni: Inicio,
                FecFin: Fin,
                Tipo: tipo
            }, function (data) {
                if (data != null && $.isArray(data.Context)) {
                    var table = $('#table-report-one').DataTable();
                    table.destroy();
                    $("#tbodyCostos").html('');
                    var totalGastado = 0;
                    $.each(data.Context, function (index, value) {
                        totalGastado = totalGastado + value.Total;
                        $("#tbodyCostos").append(
                            "<tr>\
                                <td align='center'>" + value.CentroCosto + "</td>\
                                <td><a class='btn btn-lg' data-toggle='modal' onclick='getSKUS(\"" + value.Area + "\")' data-target='#modalSKUS' align='center'><i class='fa fa-list'></i>  " + value.Area + "</a ></td>\
                                <td>" + formatNumber.new(value.Total.toFixed(2), "$ ") + "</td></tr>");
                    });
                    //Agregamos el total a la tabla
                    totalGastado = totalGastado.toFixed(2);
                    $("#tbodyCostos").append(
                        "<tr>\
                                <td align='center'>TOTAL</td>\
                                <td></td>\
                                <td>" + formatNumber.new(totalGastado, "$ ") + "</td></tr>");
                    $('#totalCostos').append('<div class="col-md-12 bg-gray disabled color-palette">\
                                                        <div class="col-md-6">\
                                                            <h5>Total Gastado: </h5>\
                                                        </div >\
                                                        <div class="col-md-6">\
                                                            <h5>' + formatNumber.new(totalGastado, "$ ") + '</h5>\
                                                        </div >\
                                                    </div >');
                    $('#table-report-one').DataTable({
                        "lengthMenu": [[10, 20, 30, -1], [10, 20, 30, "All"]],
                        "dom": 'Bfrtip',
                        stateSave: true,
                        "buttons": ['copy', 'excel', 'pdf', 'print'],
                        "language": {
                            "url": "//cdn.datatables.net/plug-ins/1.10.13/i18n/Spanish.json"
                        },
                        "order": false,
                    });
                    $('#loading-1').hide();
                    $("#tablaReporteCostos").show();
                } else {
                    swal("Error en la api: ReportePapeleriaUno");
                }
            });
        }
    });

