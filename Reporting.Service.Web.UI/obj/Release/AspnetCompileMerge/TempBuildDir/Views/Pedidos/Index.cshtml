@{
    ViewBag.Title = "Aprobación pedidos Retail";
}
<section class="content-header">
    <h1>
        Aprobación de pedidos Retail
        <small id="span-cliente"></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Pedido </a></li>
        <li class="active"> Aprobación </li>
    </ol>
</section>
<style>
    .fileinput-button {
        position: relative;
