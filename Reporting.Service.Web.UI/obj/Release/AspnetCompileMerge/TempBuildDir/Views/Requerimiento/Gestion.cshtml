<script>

    initModule();

    $(document).ready(function () {
        $('#fecha-compromiso').datepicker({
            autoclose: true,
            format: "dd/mm/yyyy",
            language: 'es',
            todayHighlight: true,
            locale: {
                daysOfWeek: [
                    "Do",
                    "Lu",
                    "Ma",
                    "Mi",
                    "Ju",
                    "Vi",
                    "Sa"
                ],
                monthNames: [
                    "Enero",
                    "Febrero",
                    "Marzo",
                    "Abril",
                    "Mayo",
                    "Junio",
                    "Julio",
                    "Agosto",
                    "Septiembre",
                    "Octubre",
                    "Noviembre",
                    "Deciembre"
                ]
            }
        });
    });



    $(document).on('change', 'input[type="file"]', function () {

        var fileName = this.files[0].name;
        var fileSize = this.files[0].size;

        if (parseInt(fileSize) > 3000000) {
            swal('Advertencia de tamaño de archivo', 'El archivo ' + fileName + ' no debe superar los 3MB', 'warning');
            this.value = '';
            this.files[0].name = '';
        } else {
            var ext = fileName.split('.').pop();
            switch (ext) {
                case 'jpg':
                case 'jpeg':
                case 'png':
                case 'pdf': break;
                default:
                    swal('El archivo no tiene la extensión adecuada');
                    this.value = ''; // reset del valor
                    this.files[0].name = '';
            }
        }
    });

    function image(img) {
        var src = img.src;
        window.open(src);
    }


    $("#btn-addevidencia").prop("disabled", true);

    function HideInputFile() {
        for (var i = 2; i < 10; i++) {
            var content = $("#Evidencia-" + i).val();
            if (content == '') {
                $("#Content-" + i).hide();
                $("#Evidencia-" + i).val('');
            }
        }
    }

    $(".btn-evidencia-del").click(function () {
        var current = $(this).attr("noinput");
        $("#Evidencia-" + current).val('');
        HideInputFile();
    });

    $(".btn-evidencia").change(function () {
        HideInputFile();
        var current = $(this).attr("noEvidencia");
        var next = Number(current) + 1;

        if (next > 1) {
            //btn-addevidencia
            $("#btn-addevidencia").prop("disabled", false);
        }
        else {
            $("#btn-addevidencia").prop("disabled", true);
        }
        $("#Content-" + next).show();
    });

    initModule2();

    function initModule2() {
        $("#Evidencia-1").val('');
        $("#Evidencia-2").val('');
        $("#Evidencia-3").val('');
        $("#Evidencia-4").val('');
        $("#Evidencia-5").val('');
        $("#Evidencia-6").val('');
        $("#Evidencia-7").val('');
        $("#Evidencia-8").val('');
        $("#Evidencia-9").val('');

        $("#Content-2").hide();
        $("#Content-3").hide();
        $("#Content-4").hide();
        $("#Content-5").hide();
        $("#Content-6").hide();
