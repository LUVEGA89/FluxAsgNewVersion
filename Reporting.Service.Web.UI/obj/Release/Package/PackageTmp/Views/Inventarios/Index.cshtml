
@{
    ViewBag.Title = "Inventarios"; <!-- Titulo de la Pestaña  -->
}
<style>
    table.dataTable thead .sorting::after {
        opacity: 0 !important;
        content: "\e150";
    }

</style>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="callout callout-danger">
                <div class="row">
                    <div class="col-md-9">
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input class="form-control pull-right" id="Calendario" type="text">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">

                            <div id="btnBuscar" class="btn btn-info btn-block">
                                <span class="fa fa-exchange"></span> Buscar
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12">


        </div>
    </div>
    <div class="box box-danger">
        <div class="box-header with-border">
            <h3 class="box-title">Hover Data Table</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                <div class="row"><div class="col-sm-6"></div><div class="col-sm-6"></div></div><div class="row">
                                                                                                   <div class="col-sm-12">

                                                                                                       <table id="tabla" class="table table-bordered table-striped dataTable">
                                                                                                           <thead>
                                                                                                               <tr>
                                                                                                                   <th> DocNum </th>
                                                                                                                   <th> Pedido </th>
                                                                                                                   <th> DocDate </th>
                                                                                                                   <th> CardName </th>
                                                                                                                   <th> Vendedor </th>
                                                                                                                   <th> TipoPedido </th>
                                                                                                                   <th> Credito </th>
                                                                                                                   <th> TrackNo </th>
                                                                                                                   <th> Status </th>
                                                                                                                   <th> NoFolio </th>
                                                                                                                   <th> TipoDoc </th>
                                                                                                                   <th> TipoCliente </th>
                                                                                                                   <th> NoCajas </th>
                                                                                                               </tr>
                                                                                                           </thead>
                                                                                                           <div id="cursor" style="display:none;" class="overlay">
                                                                                                               <i class="fa  fa fa-refresh fa-spin"></i>
                                                                                                           </div>
                                                                                                           <tbody class="display nowrap" style="width:100%"></tbody>
                                                                                                       </table>
                                                                                                   </div>
     
            </div>
        </div>
        <!-- /.box-body -->
    </div>
</section>


<script>
    $('#Calendario').daterangepicker({
        locale: {
            cancelLabel: 'Clear',
            daysOfWeek: [
                "Do",
                "Lu",
                "Ma",
                "Mi",
                "Ju",
                "Vi",
                "Sa"
            ],
            monthNames: [
                "Enero",
                "Febrero",
                "Marzo",
                "Abril",
                "Mayo",
                "Junio",
                "Julio",
                "Agosto",
                "Septiembre",
                "Octubre",
                "Noviembre",
                "Deciembre"
            ]
        }
    });

    $("#btnBuscar").click(function () {       
        let FecIni = "";
        let FecFin = "";

        let drp = $('#Calendario').data('daterangepicker');
        let vFI = drp.startDate.format('MM/DD/YYYY');
        let vFF = drp.endDate.format('MM/DD/YYYY');

        $('#cursor').show(); 

        $.post('@Url.Action("ObtenerFacturas", "Inventarios")', {
            FecIni: vFI,
            FecFin: vFF
        }, function (data) {
            if (data != null && $.isArray(data.Context))
            {
                var t = $('#tabla').DataTable({
                    dom: 'Bfrtip',
                    buttons: [
                        'copy', 'csv', 'excel', 'pdf', 'print'
                    ],
                    language: {
                        "url": "//cdn.datatables.net/plug-ins/1.10.13/i18n/Spanish.json"
                    }, 
                    order: false
                });
                t.clear().draw();
                $.each(data.Context, function (index, value) {

                    
   
                    t.row.add([
                        '<td>' + value.DocNum + '</td>',
                        '<td>' + value.Pedido + '</td>',
                        '<td>' + value.DocDate + '</td>',
                        '<td>' + value.CardName + '</td>',
                        '<td>' + value.Vendedor + '</td>',
                        '<td>' + value.TipoPedido + '</td>',
                        '<td>' + value.Credito + '</td>',
                        '<td>' + value.TrackNo + '</td>',
                        '<td>' + value.Status + '</td>',
                        '<td>' + value.NoFolio + '</td>',
                        '<td>' + value.TipoDoc + '</td>',
                        '<td>' + value.TipoCliente + '</td>',
                        '<td>' + value.NoCajas + '</td>'
                    ]).draw(false);

                });
            } else {
                swal("Error en la api: ObtenerFacturas");
            }
            });

        $('#cursor').hide();

    });

  



</script>


